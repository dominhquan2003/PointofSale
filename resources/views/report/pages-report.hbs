<div class="content-page">
    <div class="container-fluid">
        
        <div class="row">
          
            <div class="col-lg-12 mb-4">
                <div id="reportrange"
                    style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc; width: 100%">
                    <i class="fa fa-calendar"></i>&nbsp;
                    <span id="startenddatetime"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-3">
                <div class="card card-block card-stretch card-height">
                    <div class="card-body">
                        <div class="d-flex align-items-center card-total-sale">
                            <div class="icon iq-icon-box-2 bg-info-light">
                                <img src="../assets/images/report/total-sales.png" class="img-fluid" alt="image">
                            </div>
                            <div>
                                <p class="mb-2">Total Sales</p>
                                <h4 id="totalprice"></h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3">
                <div class="card card-block card-stretch card-height">
                    <div class="card-body">
                        <div class="d-flex align-items-center card-total-sale">
                            <div class="icon iq-icon-box-2 bg-danger-light">
                                <img src="../assets/images/report/order-sales.png" class="img-fluid" alt="image">
                            </div>
                            <div>
                                <p class="mb-2">Orders Sold</p>
                                <h4 id="totalorderssold"></h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3">
                <div class="card card-block card-stretch card-height">
                    <div class="card-body">
                        <div class="d-flex align-items-center card-total-sale">
                            <div class="icon iq-icon-box-2 bg-success-light">
                                <img src="../assets/images/report/product-sales.png" class="img-fluid" alt="image">
                            </div>
                            <div>
                                <p class="mb-2">Product Sold</p>
                                <h4 id="totalproduct"></h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3" id="profit-report">
                <div class="card card-block card-stretch card-height">
                    <div class="card-body">
                        <div class="d-flex align-items-center card-total-sale">
                            <div class="icon iq-icon-box-2 bg-primary-light">
                                <img src="../assets/images/report/profit.png" class="img-fluid" alt="image">
                            </div>
                            <div>
                                <p class="mb-2">Profit</p>
                                <h4 id="totalprofit"></h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="card col-lg-12 col-md-12">
            <div class="card-body">
                <div class="col-lg-12">
                    <div class="table-responsive rounded mb-3">
                        <table id="datatable" class="table mb-0 tbl-server-info">
                            <thead class="bg-white text-uppercase">
                                <tr class="ligth ligth-data">
                                    <th>Order Id</th>
                                    <th>Total Amount</th>
                                    <th>Cash</th>
                                    <th>Refund</th>
                                    <th>Status</th>
                                    <th>Date of Purchase</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody class="ligth-body" id="tbodyreport">
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


